{
  "pluginAlias": "SENSiT",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "SENSiT",
        "description": "The name that will appear in your homebridge log"
      },
      "emailAddress": {
        "title": "E-Mail",
        "type": "string",
        "placeholder": "YOUR-SENSiT-EMAIL",
        "required": true,
        "description": "Your SENSiT email address / login.",
        "format": "email"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "placeholder": "YOUR-SENSiT-PASSWORD",
        "required": true,
        "description": "Your SENSiT password."
      },
      "refresh": {
        "title": "Refresh",
        "type": "string",
        "required": false,
        "placeholder": 12,
        "minLength": 1,
        "description": "Data polling interval in hours, defaults to 12 hours"
      }
    }
  }
}
